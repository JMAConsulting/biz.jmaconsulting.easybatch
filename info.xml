<?xml version="1.0"?>
<extension key="biz.jmaconsulting.easybatch" type="module">
  <file>easybatch</file>
  <name>Easy Batch</name>
  <description>This extension automates adding financial transactions to batches in most cases, and facilitates manually batching the remaining backend payments.</description>
  <license>AGPL-3.0</license>
  <maintainer>
    <author>Edsel</author>
    <email>edsel.lopez@jmaconsulting.biz</email>
  </maintainer>
  <urls>
    <url desc="Main Extension Page">https://github.com/JMAConsulting/biz.jmaconsulting.easybatch</url>
    <url desc="Documentation">https://github.com/JMAConsulting/biz.jmaconsulting.easybatch/blob/master/README.md</url>
    <url desc="Support">https://github.com/JMAConsulting/biz.jmaconsulting.easybatch/issues</url>
    <url desc="Licensing">http://www.gnu.org/licenses/agpl-3.0.html</url>
  </urls>
  <releaseDate>2017-04-20</releaseDate>
  <version>1.0</version>
  <develStage>stable</develStage>
  <compatibility>
    <ver>5.38</ver>
  </compatibility>
  <civix>
    <namespace>CRM/EasyBatch</namespace>
    <format>23.02.1</format>
  </civix>
  <mixins>
    <mixin>mgd-php@1.0.0</mixin>
    <mixin>setting-php@1.0.0</mixin>
    <mixin>smarty-v2@1.0.1</mixin>
  </mixins>
  <classloader>
    <psr0 prefix="CRM_" path="."/>
    <psr4 prefix="Civi\" path="Civi"/>
  </classloader>
  <upgrader>CRM_EasyBatch_Upgrader</upgrader>
</extension>
